<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("compose_post") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image_accept %>
  </span>
  <%= f.submit t("post"), class: "btn btn-primary" %>
<% end %>
